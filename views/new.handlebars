<div class="container mt-3 ms-5">
  <form action="/restaurants/new" method="POST">
    <div class="d-flex flex-column col-3 mb-2">
      <label for="name" class="fw-bold">Name (必填)</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="請輸入餐廳的店名" required>
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="name_en" class="fw-bold">English Name</label>
      <input type="text" class="form-control" id="name_en" name="name_en" placeholder="請輸入餐廳的英文店名">
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="category" class="fw-bold">Category</label>
      <input list="category" class="form-control" name="category" placeholder="請輸入餐廳的類型">
      <datalist id="category">
        <option value="中式料理">
        <option value="日式料理">
        <option value="義式料理">
        <option value="美式料理">
        <option value="咖啡廳">
      </datalist>
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="image" class="fw-bold">Image</label>
      <input type="text" class="form-control" id="image" name="image" placeholder="請輸入餐廳的照片(URL)">
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="location" class="fw-bold">Location</label>
      <input type="text" class="form-control" id="location" name="location" placeholder="請輸入餐廳的地址">
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="phone" class="fw-bold">Phone</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="請輸入餐廳的連絡電話">
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="google_map" class="fw-bold">Google_map</label>
      <input type="text" class="form-control" id="google_map" name="google_map" placeholder="請輸入餐廳的google map網址">
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="rating" class="fw-bold">Rating</label>
      <input type="number" class="form-control" min="0" max="5" step="0.1" id="rating" name="rating"
        placeholder="請輸入餐廳的評價(0~5)">
    </div>
    <div class="d-flex flex-column col-3 mb-2">
      <label for="description" class="fw-bold">Description</label>
      <textarea class="form-control" id="description" name="description" rows="3" placeholder="請輸入餐廳的詳細介紹"></textarea>
    </div>
    <button type="submit" class="btn btn-primary my-3">Submit</button>
  </form>
  <a href="/">Back</a>
</div>